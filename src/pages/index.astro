// Career Timeline
const careerTimeline = [
  {
    period: "2013„Äú2018",
    items: [
      "Android system app",
      "iOS app",
      "Hybrid app (Cordova)"
    ]
  },
  {
    period: "2018„Äú2020",
    items: [
      "Image Recognition (Deep learning & Image processing)",
      "Data science (Machine learning)"
    ]
  },
  {
    period: "2020„Äú2021",
    items: [
      "Data science (Machine learning)",
      "Mobile native library(C/C++)"
    ]
  },
  {
    period: "2021„Äú",
    items: [
      "Back-End infrastructure & app (AWS)"
    ]
